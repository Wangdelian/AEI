<script>
    var menuname = '${menuname}';
    var userextvalue4 = '${userextvalue4}';
    var firstMenuid = '${firstMenuid}';
    var siteurl = '${siteurl}';
    var switchsitename='${switchsitename}';
    var message;
    var app;
    var layer;
    var element;

    $.get(siteurl + '/sys/menu/getUserMenu/${userid}', function (r) {
        var firstClass = [];
        var secondClass = [];

        r.menu.forEach(function (i) {
            if (1 === i.type)
                firstClass.push(i);
            else if (2 === i.type)
                secondClass.push(i)
        });


        for (var i = 0; i < firstClass.length; i++) {
            if (firstClass[i].name=='报表中心')
            {
                firstClass[i].name=switchsitename+'报表中心';
            }
            var html = '<li class="layui-nav-item ">' +
                '<a class="" href="javascript:;"><i class="layui-icon">' + firstClass[i].icon + '</i><span> ' + firstClass[i].name + '</span></a>' +
                '<dl class="layui-nav-child">';

            for (var j = 0; j < secondClass.length; j++) {
                if (secondClass[j].parentId === firstClass[i].menuId) {

                    html += '<dd>' +
                        '<a href="javascript:;" kit-target data-options="{url:' + "'" + siteurl + secondClass[j].url + "'" + ',icon:' + "'" + secondClass[j].icon + "'" + ',title:' + "'" + secondClass[j].name + "'" + ',id:' + "'" + secondClass[j].menuId + "'" + '}" >' +
                        '<i class="layui-icon">' + secondClass[j].icon + '</i><span> ' + secondClass[j].name + '</span></a>' +
                        '</dd>';
                }
            }
            html += '</dl></li>';
            $('ul[class="layui-nav layui-nav-tree"]').append(html);
        }
        //删除用户信息
        delCookie('currUserId');

        layui.config({
            base: '${siteurl}/templates/skin2/template/build/js/',
            version: '1.0.1'
        }).use(['app', 'element', 'message'], function () {
            app = layui.app;
            layer = layui.layer;
            element = layui.element;
            //将message设置为全局以便子页面调用
            message = layui.message;

            //主入口
            app.set({
                type: 'iframe'
            }).init();

            $('dl.skin > dd').on('click', function () {
                var $that = $(this);
                var skin = $that.children('a').data('skin');
                switchSkin(skin);
            });
            var setSkin = function (value) {
                    layui.data('kit_skin', {
                        key: 'skin',
                        value: value
                    });
                },
                getSkinName = function () {
                    return layui.data('kit_skin').skin;
                },
                switchSkin = function (value) {
                    var _target = $('link[kit-skin]')[0];
                    _target.href = _target.href.substring(0, _target.href.lastIndexOf('/') + 1) + value + _target.href.substring(_target.href.lastIndexOf('.'));
                    setSkin(value);
                },
                initSkin = function () {
                    var skin = getSkinName();
                    switchSkin(skin === undefined ? 'default' : skin);
                }();
        });
    });


    function popMessage() {
        layer.open({
            type: 0,
            title: '提示',
            content: '123',
            area: ['400px', '300px'],
            shade: false,//是否遮罩
            offset: 'rb',
            anim: 2,
            success: function(layero){
                layer.setTop(layero); //重点2
            }
        });
    }
</script>
